<div class="page-header">
  <h3>Wine #<%= @wine.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Category</dt>
      <dd><%= @wine.category %></dd>

      <dt>Name</dt>
      <dd><%= @wine.name %></dd>

      <dt>User</dt>
      <dd><%= @wine.user_id %></dd>

      <dt>Fellow imbibers</dt>
      <dd><%= @wine.fellow_imbibers %></dd>

      <dt>Favorite</dt>
      <dd><%= @wine.favorite %></dd>

      <dt>Year</dt>
      <dd><%= @wine.year %></dd>

      <dt>Rating</dt>
      <dd><%= @wine.rating %></dd>

      <dt>Notes</dt>
      <dd><%= @wine.notes %></dd>

      <dt>Grape</dt>
      <dd><%= @wine.grape %></dd>

      <dt>Country</dt>
      <dd><%= @wine.country %></dd>

      <dt>Photo</dt>
      <dd><%= @wine.photo %></dd>

    </dl>

    <div class="btn-group btn-group-xs btn-group-middle">
      <a class="navbar-brand" href="/wines"> 
        <i class="fa fa-chevron-left"></i>
        Back
        </a>
        <a class="navbar-brand" href="/wines/<%= @wine.id %>/edit"> 
        <i class="fa fa-pencil"></i>
        Edit
        </a>
      <a class="navbar-brand" href="/delete_wine/<%= @wine.id %>"> 
        <i class="fa fa-trash"></i>
        Delete
        </a>
    </div>
  </div>
</div>

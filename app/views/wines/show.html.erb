<div class="page-header">
  <h3>Wine #<%= @wine.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Category</dt>
      <dd><%= @wine.category %></dd>

      <dt>Name</dt>
      <dd><%= @wine.name %></dd>

      <dt>User</dt>
      <dd><%= @wine.user_id %></dd>

      <dt>Fellow imbibers</dt>
      <dd><%= @wine.fellow_imbibers %></dd>

      <dt>Favorite</dt>
      <dd><%= @wine.favorite %></dd>

      <dt>Year</dt>
      <dd><%= @wine.year %></dd>

      <dt>Rating</dt>
      <dd><%= @wine.rating %></dd>

      <dt>Notes</dt>
      <dd><%= @wine.notes %></dd>

      <dt>Grape</dt>
      <dd><%= @wine.grape %></dd>

      <dt>Country</dt>
      <dd><%= @wine.country %></dd>

      <dt>Photo</dt>
      <dd><%= @wine.photo %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/wines" class="btn btn-primary">
        Back
      </a>
      <a href="/wines/<%= @wine.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_wine/<%= @wine.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

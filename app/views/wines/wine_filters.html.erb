<div class="page-header">
  <h1>
    <%= params[:my_category] %> Wine
    <a href="/wines/new" class="btn btn-sm btn-primary">Add a Bottle</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Favorite</th>
        <th>Category</th>
        <th>Name</th>
        <th>Year</th>
        <th>Rating</th> 	
        <th>Notes</th>
        <th>Grape</th>
        <th>Country</th>
        <th>Actions</th>
      </tr>

      <% @wines.each do |wine| %>
      <tr>
          <td><img src="<%= wine.photo %>" width="150" class="img-responsive"></td>
        <td><%= wine.favorite %></td>
        <td><%= wine.category %></td>
        <td><%= wine.name %></td>
        <td><%= wine.year %></td>
        <td><%= wine.rating %></td>
        <td><%= wine.notes %></td>
        <td><%= wine.grape %></td>
        <td><%= wine.country %></td>
        <td>
      <a href="/wines/<%= wine.id %>" class="btn btn-xs btn-default">Show</a>
          <a href="/wines/<%= wine.id %>/edit" class="btn btn-xs btn-default">Edit</a>
          <a href="/delete_wine/<%= wine.id %>" class="btn btn-xs btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>